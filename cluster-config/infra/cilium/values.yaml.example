# Cilium Helm Values - EXAMPLE
# 
# Copy to values.yaml and fill in your values:
#   cp values.yaml.example values.yaml
#
# Cilium versie: 1.19.0
#
# Network conventions in this repo:
#   LAN:          192.168.xxx.0/24
#   Pod CIDR:     10.200.0.0/16
#   Service CIDR: 10.32.0.0/24

# === KUBERNETES API ===
# Your control plane IP (replace xxx with your subnet)
k8sServiceHost: "192.168.xxx.201"
k8sServicePort: 6443

# === KUBE-PROXY REPLACEMENT ===
# Cilium replaces kube-proxy entirely (eBPF-based)
kubeProxyReplacement: true

# === IPAM ===
# Cluster-pool mode for pod IP allocation
ipam:
  mode: cluster-pool
  operator:
    clusterPoolIPv4PodCIDRList:
      - "10.200.0.0/16"
    clusterPoolIPv4MaskSize: 24

# === GATEWAY API ===
# Enable Cilium as Gateway API controller (Envoy-based)
gatewayAPI:
  enabled: true

# === HUBBLE (Observability) ===
hubble:
  enabled: true
  relay:
    enabled: true
  ui:
    enabled: true
